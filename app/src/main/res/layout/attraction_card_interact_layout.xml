<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/interact_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardBackgroundColor="@color/almostWhite"
    app:cardCornerRadius="@dimen/size_8"
    app:cardElevation="@dimen/size_8">

    <LinearLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/interact_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_short"
            android:text="@string/interact"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

                <Button
                    android:id="@+id/btnPostcard"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/postcard"
                    android:textAllCaps="false"
                    android:textColor="@color/almostWhite" />
                <Button
                    android:id="@+id/btnComment"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/btnPostcard"
                    android:text="@string/comment"
                    android:textAllCaps="false"
                    android:textColor="@color/almostWhite"/>
                <Button
                    android:id="@+id/btnCheckin"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnPostcard"
                    android:text="@string/check_in"
                    android:textAllCaps="false"
                    android:textColor="@color/almostWhite"/>
                <Button
                    android:id="@+id/btnCamera"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnComment"
                    android:layout_toEndOf="@id/btnCheckin"
                    android:text="@string/camera"
                    android:textAllCaps="false"
                    android:textColor="@color/almostWhite"/>

            <Button
                    android:id="@+id/btnMap"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnCheckin"
                    android:text="@string/map"
                    android:textAllCaps="false"
                    android:textColor="@color/almostWhite"/>
            <Button
                    android:id="@+id/btnDonate"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnCamera"
                    android:layout_toEndOf="@id/btnMap"
                    android:text="@string/donate"
                    android:textAllCaps="false"
                    android:textColor="@color/almostWhite"/>

        </RelativeLayout>

            <RatingBar
                android:id="@+id/rating_bar"
                style="@style/storyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_standard"
                android:layout_gravity="center"
                android:numStars="5"/>

    </LinearLayout>

</android.support.v7.widget.CardView>