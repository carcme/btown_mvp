<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bonuspack_bubble_white">

    <ImageView
            android:id="@+id/bubble_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:contentDescription="@null"
            tools:visibility="visible"
            tools:src="@drawable/ic_burger_menu"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/bubble_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_gravity="start"
                    android:maxEms="12"
                    tools:text="a really long title to test the width of this text iew"/>

        </LinearLayout>

        <me.carc.btown.ui.custom.CapitalisedTextView
                android:id="@+id/bubble_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp"
                android:maxEms="12"
                tools:text="Description"/>

        <TextView
                android:id="@+id/bubble_subdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp"
                android:maxEms="12"
                tools:text="Address"
                android:visibility="gone"
                tools:visibility="visible"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/bubble_directions"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@null"
                android:layout_gravity="end|center_vertical"
                app:srcCompat="@drawable/ic_directions"
                android:visibility="gone"
                tools:visibility="visible"/>

        <ImageView
            android:id="@+id/bubble_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@null"
            android:layout_gravity="end|center_vertical"
            app:srcCompat="@drawable/ic_more"
            android:visibility="visible"
            tools:visibility="visible"/>

    </LinearLayout>

</LinearLayout>
