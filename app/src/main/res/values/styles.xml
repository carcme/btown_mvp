<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <style name="Dialog_Fullscreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="PoiItemDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:colorBackground">@android:color/transparent</item>-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="RtlAwareTextView" parent="@android:style/Widget.TextView" tools:targetApi="17">
        <item name="android:textDirection">anyRtl</item>
        <item name="android:textAlignment">viewStart</item>
    </style>


    <style name="PoiMoreInfoTextView" parent="@android:style/Widget.TextView" tools:targetApi="17">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:textColor">@color/black54</item>
        <item name="android:drawablePadding">@dimen/margin_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>


</resources>
